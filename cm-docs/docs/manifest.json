{
    "manifest_version": 3,
    "name": "Amazon Tariff Estimator",
    "version": "1.1",
    "description": "Displays estimated tariffs for Amazon products based on category and country of origin.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.amazon.com/*"],
    "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png"    
  },
    "content_scripts": [
      {
        "matches": ["https://www.amazon.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  